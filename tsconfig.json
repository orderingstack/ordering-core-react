{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}